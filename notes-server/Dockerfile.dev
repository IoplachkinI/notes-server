# syntax=docker/dockerfile:1

ARG RUST_VERSION=1.91.1
FROM rust:${RUST_VERSION}-slim-bullseye AS dev

WORKDIR /app

# Install system deps
RUN apt-get update && \
    apt-get install -y \
    libssl-dev \
    pkg-config \
    protobuf-compiler \
    && rm -rf /var/lib/apt/lists/*

# Install cargo-watch for hot reload
RUN cargo install cargo-watch && \
    cp /usr/local/cargo/bin/cargo-watch /usr/local/bin/

# Copy dependency files
COPY Cargo.toml Cargo.lock ./

# Copy workspace member Cargo.toml files
COPY notes-server/Cargo.toml ./notes-server/
COPY grpc-client/Cargo.toml ./grpc-client/
COPY load-balancer/Cargo.toml ./load-balancer/
COPY email-service/Cargo.toml ./email-service/

# Pre-build dependencies (this layer will be cached)
RUN mkdir -p notes-server/src grpc-client/src load-balancer/src email-service/src && \
    echo "fn main() {}" > notes-server/src/main.rs && \
    echo "fn main() {}" > grpc-client/src/main.rs && \
    echo "fn main() {}" > load-balancer/src/main.rs && \
    echo "fn main() {}" > email-service/src/main.rs && \
    cargo build -p notes-server && \
    rm -rf notes-server/src grpc-client/src load-balancer/src email-service/src

# The source code will be mounted as a volume
# Default command runs cargo watch
# Using 'build' ensures build.rs runs before compilation
CMD ["cargo", "watch", "-x", "build -p notes-server", "-x", "run -p notes-server"]

